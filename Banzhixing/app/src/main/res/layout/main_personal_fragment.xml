<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/userAvatarContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#34B9C0"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/main_personal_user_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Hello"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
            app:layout_constraintLeft_toRightOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/ivAvatar" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAvatarContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:showDividers="middle|end"
        android:divider="@drawable/divider_gray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/main_personal_contact"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/main_personal_emergency"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:id="@+id/tvModifyEmergency"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/main_personal_security_code"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/main_personal_security_code"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:id="@+id/tvSecurityCode"/>
        <!-- 退出按钮 -->
        <Button
            android:id="@+id/bt_main_personal_quit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:background="@color/color_minefragment_top"
            android:onClick="onClick"
            android:text="退出账号"
            android:textColor="#fff" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>